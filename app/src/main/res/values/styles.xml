<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MonthWeekDayViewInnerTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/deep_blue</item>
        <item name="android:textSize">@dimen/month_week_day_view_text_size</item>
    </style>

    <style name="MonthWeekDayViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TitlebarTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/titlebar_text_size</item>
        <item name="android:textColor">@color/deep_blue</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/btn_function_bg</item>
    </style>

    <style name="LessonViewTextStyle">
        <item name="android:textSize">@dimen/lesson_view_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AccountPasswordTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

</resources>