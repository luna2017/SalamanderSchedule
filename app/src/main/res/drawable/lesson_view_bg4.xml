<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <padding
                android:bottom="@dimen/lesson_view_padding"
                android:left="@dimen/lesson_view_padding"
                android:right="@dimen/lesson_view_padding"
                android:top="@dimen/lesson_view_padding" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <layer-list>
                    <item>
                        <shape>
                            <corners
                                android:bottomLeftRadius="@dimen/lesson_view_corner_size"
                                android:bottomRightRadius="@dimen/lesson_view_corner_size"
                                android:topLeftRadius="@dimen/lesson_view_corner_size"
                                android:topRightRadius="@dimen/lesson_view_corner_size" />

                            <solid android:color="@color/half_transparent_black" />
                        </shape>
                    </item>
                    <item>
                        <shape>
                            <corners
                                android:bottomLeftRadius="@dimen/lesson_view_corner_size"
                                android:bottomRightRadius="@dimen/lesson_view_corner_size"
                                android:topLeftRadius="@dimen/lesson_view_corner_size"
                                android:topRightRadius="@dimen/lesson_view_corner_size" />

                            <solid android:color="@color/lesson_view_inner_bg_color4" />
                        </shape>
                    </item>
                </layer-list>
            </item>
            <item>
                <shape>
                    <corners
                        android:bottomLeftRadius="@dimen/lesson_view_corner_size"
                        android:bottomRightRadius="@dimen/lesson_view_corner_size"
                        android:topLeftRadius="@dimen/lesson_view_corner_size"
                        android:topRightRadius="@dimen/lesson_view_corner_size" />

                    <solid android:color="@color/lesson_view_inner_bg_color4" />
                </shape>
            </item>
        </selector>
    </item>

</layer-list>