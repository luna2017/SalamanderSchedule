<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.attraction.schedule.view.RelativeLayoutWithBottomLine
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/title_bar_bakc_color" >

        <TextView
            android:id="@+id/tv_main_settings"
            style="@style/TitlebarTextViewStyle"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/settings_right_padding"
            android:text="@string/setting" />

        <TextView
            android:id="@+id/tv_main_title"
            style="@style/TitlebarTextViewStyle"
            android:layout_centerInParent="true"
            android:text="@string/app_name" />
    </com.attraction.schedule.view.RelativeLayoutWithBottomLine>

</LinearLayout>