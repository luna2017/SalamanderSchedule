<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <com.attraction.schedule.view.RelativeLayoutWithBottomLine
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titlebar_bakc_color"
        android:paddingBottom="@dimen/titlebar_padding"
        android:paddingTop="@dimen/titlebar_padding" >

        <TextView
            android:id="@+id/tv_main_settings"
            style="@style/TitlebarTextView"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/settings_right_padding"
            android:text="@string/settings" />

        <TextView
            android:id="@+id/tv_main_title"
            style="@style/TitlebarTextView"
            android:layout_centerInParent="true"
            android:text="@string/app_name" />
    </com.attraction.schedule.view.RelativeLayoutWithBottomLine>

    <com.attraction.schedule.view.Timetable
        android:id="@+id/timetable_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.attraction.schedule.view.Timetable>

</LinearLayout>